@import './styles/icofont.wxss';

/* 在微信小程序中不支持通配符 */

page,
view,
text,
swiper,
swiper-item,
image,
navigator {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}


/* 主体颜色通过变量来实现 
1. less 中存在变量这个知识
2. 原生的css 和wxss 也是支持变量*/

page {
    /* 定义主体颜色 */
    --themeColor: #eb4450;
    /* 统一定义字体大小 28rpx = 14px*/
    font-size: 28rpx;
}

image {
    width: 100%;
}