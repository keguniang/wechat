page {
  margin-bottom: 80rpx;
}
.detail_wraper {
  padding: 10rpx;
}
.detail_wraper swiper {
  height: 70vw;
  text-align: center;
}
.detail_wraper swiper swiper-item image {
  width: 70%;
}
.detail_wraper .goods_price {
  color: var(--themeColor);
  font-size: 30rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.detail_wraper .goods_name_row {
  padding: 15rpx 0;
  border-bottom: 5rpx solid #dedede;
  display: flex;
}
.detail_wraper .goods_name_row .goods_name {
  color: #000;
  flex: 5;
  border-right: 2px solid #bbb;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.detail_wraper .goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.detail_wraper .goods_detail .goods_detail_title {
  color: var(--themeColor);
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx;
}
.detail_wraper .btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  width: 100%;
  height: 80rpx;
  display: flex;
  font-size: 24rpx;
}
.detail_wraper .btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.detail_wraper .btm_tool .tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.detail_wraper .btm_tool .btn_car {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffa300;
  color: white;
  font-weight: bold;
}
.detail_wraper .btm_tool .btn_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f5554e;
  color: white;
  font-weight: bold;
}
