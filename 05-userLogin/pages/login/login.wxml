<!-- pages/login/login.wxml -->
<view class="mcontainer">
    <!-- logo 部分 -->
    <view class="item">
        <image src="/image/logo.png" />
    </view>
    <!-- 用户名密码按钮部分 -->
    <view class="item">
        <!-- 用户名 -->
        <view class="login-item">
            <view class="login-item-info">用户名</view>
            <view>
                <input bindblur="nameInput"/>
            </view>
        </view>
        <!-- 密码 -->
        <view class="login-item">
            <view class="login-item-info">密码</view>
            <view class="login-pwd">
                <input password="true" bindblur="pwdInput"/>
                <text>忘记密码</text>
            </view>
        </view>
        <!-- 确认按钮 -->
        <view class="login-item bottom">
            <button class="login-btn" bindtap="login">登录</button>
        </view>
    </view>

    <!-- 注册部分 -->
    <view class="item bottom-info">
        <text >没有账户？注册</text>
        <view class="wechat-icon">
            <image src="/image/wechat.png" />
        </view>
    </view>
</view>