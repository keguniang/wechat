page {
    color: #666;
    padding: 10rpx;
}

.nav {
    white-space: nowrap;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}

.nav_item {
    padding: 20rpx;
    display: inline-block;
}

.nav_item.active {
    border-bottom: 2px solid #de688b;
}


/* 轮播图 */

swiper {
    height: 220rpx;
}

image {
    width: 100%;
    height: 100%;
}


/* 视频列表 */

.video_wrap {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.video_item {
    width: 49%;
    margin-bottom: 20rpx;
}

.video_img {
    position: relative;
}

.video_img image {
    border-radius: 15rpx;
}

.video_img .video_info {
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    height: 20px;
    line-height: 20px;
    color: #fff;
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    padding: 0 10rpx;
    background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, .8), rgba(0, 0, 0, 0));
}

.fa {
    margin-right: 10rpx;
}

.video_title {
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: wrap;
    /* 文字两行 */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    /* 从上向下垂直排列子元素。 */
    -webkit-box-orient: vertical;
    text-indent: 2em;
}